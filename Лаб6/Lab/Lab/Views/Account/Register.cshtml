@using System.Web.Optimization
@model Lab.Models.RegisterModel
@{
    ViewBag.Title = "Регистрация";
}
@section PageStyle {
    @Styles.Render("~/Content/Registrer")
}


<div class="container">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        <h2 class="form-signin-heading">Форма регистрации</h2>

        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName,new {@class="form-control"})

        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password,new {@class="form-control"})

        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword,new {@class="form-control"})

        <button class="btn btn-danger btn-lg" type="submit">Зарегистрироваться</button>
        @Html.ActionLink("Вернуться", "Login", null, new {@class = "btn btn-primary btn-lg"}) 
    }
</div> <!-- /container -->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}